<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB"
    crossorigin="anonymous">

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.1.20/jquery.fancybox.min.css" />

  <link rel="stylesheet" href="/css/style.css">

  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="/css/font-awesome.min.css">
  
  <link href="/css/product.css" rel="stylesheet">

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/fontawesome.css" integrity="sha256-46p0lbhGHjtMfaQccm2r3tv3hy9QR3ZG7PH8mlcURnw=" crossorigin="anonymous" />
  

  <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>

  <title>
    <%= title %>
  </title>

  
</head>

<body>

  <div class="ajaxbg">
    <div class="ajaxinner">
      <h3>You are now being redirected to paypal...</h3>
      <img src="/images/ajax-loader.gif" alt="" />
    </div>
  </div>

  <!-- still workout with navbar 4 how to pull-letf -->
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <a class="navbar-brand" href="/">GhibShop</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault"
      aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarsExampleDefault">
      <ul class="navbar-nav mr-auto ">
        <% pages.forEach(function(page){ %>
        <% if (page.slug == "home") { %>
        <li>&nbsp;&nbsp;&nbsp;&nbsp;</li>
        <li class="nav-item active"><a class="nav-link" href="/">
            <%= page.title %></a></li>
        <% } else {%>
        <li>&nbsp;&nbsp;&nbsp;&nbsp;</li>
        <li class="nav-item active"><a class="nav-link" href="/<%= page.slug %>">
            <%= page.title %></a></li>
        <% } %>
        <% }); %>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <li>&nbsp;&nbsp;&nbsp;&nbsp;</li>
        <li class="nav-item active">
          <a class="nav-link" href="/cart/checkout"><i class="fa fa-shopping-cart"></i> My Cart   (<% if (typeof cart !== "undefined") { %>
            <%= cart.length %>
            <% } else {%>
            0
            <% } %>
            )
            </a>
        </li>
        <li>&nbsp;&nbsp;&nbsp;&nbsp;</li>
        <% if (user) { %>
        <li class="nav-item active"><a class="nav-link" href="/users/logout">Hi,
            <%= user.username %> ( logout )</a></li>
        <% } else {%>
        <li>&nbsp;&nbsp;&nbsp;&nbsp;</li>
        <li ><a class="btn btn-outline-success" href="/users/register">Register</a></li>
        <li>&nbsp;&nbsp;&nbsp;&nbsp;</li>
        <li ><a class="btn btn-outline-success" href="/users/login">Log in</a></li>
        <% } %>
        <li>&nbsp;&nbsp;&nbsp;&nbsp;</li>
        <% if (user && user.admin == 1) { %>
        <li><a class="nav-link" href="/admin/pages">Admin Area</a></li>
        <% }%>

      </ul>
    </div>
  </nav>

  

  <br><br><br>

  <div class="container">

    <div class="row">
        <%- messages('messages', locals) %>

        <% if (errors) {%>
        <% errors.forEach(function(error) { %>
        <div class="alert alert-danger">
          <%= error.msg %>
        </div>
        <% });%>
        <% }%>
    </div>

    <div class="row">
      <div class="col-xs-12 col-md-3">
        <br>
        <h3>Categories</h3>
        <ul class="list-group">
          <li class="list-group-item"><a href="/products">All products</a></li>
          <% categories.forEach(function(c){ %>
          <li class="list-group-item"><a href="/products/<%= c.slug %>">
              <%= c.title %></a></li>
          <% }); %>
        </ul>
      </div>
      <div class="col-xs-12 col-md-1"></div>
      <div class="col-xs-12 col-md-8">