<%- include('../_layouts/adminheader.ejs') %>
<br><br>    

<h2 class="page-title">Edit page </h2>
<a href="/admin/pages" class="btn btn-primary"> Back to all pages </a>

<br><br>

<form method="POST" action="/admin/pages/edit-page/<%= slug %>">

    <div class="form-group">
        <label for="title">Title</label>
        <input  class="form-control" name="title" placeholder="Title" value="<%= title %>" type="text" >
    </div>

    <div class="form-group">
        <label for="slug">Slug</label>
        <input  class="form-control" name="slug" placeholder="Slug" value="<%= slug %>" type="text" >
    </div>

    <div class="form-group">
        <label for="content">Content</label>
        <textarea id="ta" class="form-control" name="content" placeholder="Content" cols="30" row="10"  ><%= content %>  </textarea>
    </div>
    <!-- hidden id -->
    <input type="hidden" name="id" value="<%= id %>">

    <button class="btn btn-primary" >Submit</button>
</form>

<%- include('../_layouts/adminfooter.ejs') %>