<%- include('../_layouts/adminheader') %>
<br><br><p></p><p></p> 

<% if (count > 0) { %>
<h2 class="product-title">Products</h2>
<a href="/admin/products/add-product" class="btn btn-primary"> Add New Product </a>
<br><br>



<table class="table table-striped alignmiddle">
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Category</th>
            <th>Product Image</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <!-- /* Do Looping */ -->
        <% products.forEach(function (product) { %>
            <tr id="id_<%= product._id %>" class="<%= product.slug %> ">
                <td>
                    <%= product.title %>
                </td>
                <td>
                    <%= parseFloat(product.price).toFixed(2) %>
                </td>
                <td>
                    <%= product.category %>
                     
                </td>
                <td>
                    <% if (product.image == ""){ %>
                        <img id="noimage" width="100" height="100" src="/images/noimage.png" alt="">
                    <% } else { %>
                        <img id="noimage" width="100" height="100" src="/product_images/<%= product._id %>/<%= product.image %>">

                    <% } %>  
                </td>
                <td>
                    <a href="/admin/products/edit-product/<%= product._id %>">Edit</a>
                </td>
                <td>
                    <a class="confirmDeletion" href="/admin/products/delete-product/<%= product._id %>">Delete</a>
                </td>
            </tr>
        <% }); %>
    </tbody>
</table>

<% } else { %>
    <h2 class="product-title">Products</h2>
    <a href="/admin/products/add-product" class="btn btn-primary"> Add New Product </a>
    <h1 class="text-center">There is nothing to do Here!!</h1>

<% } %>


<br><br>



<%- include('../_layouts/adminfooter') %>