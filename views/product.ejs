<% include _layouts/header %>
<br><br><br>
<div class="row">
    <h1 class="page-header">
            <%= p.title %>
    </h1>
</div>    
<div class="row">
    
    <br><br><br>
    <div class="col-xs-12 col-md-5">
        <img width="300" height="300" src="/product_images/<%= p.id %>/<%= p.image %>" alt="">
        <br>    
    </div>
    
    <div class="col-xs-12">
        <ul class="gallery">
            <% galleryImages.forEach(function(image) { %>
                <% if (image != "thumbs") { %>
                    <li>
                        <a data-fancybox="gallery" href="/product_images/<%= p.id %>/gallery/<%= image %>">
                            <img src="/product_images/<%= p.id %>/gallery/thumbs/<%= image %>" alt="">
                        </a>
                    </li> 
                <% } %>
            <% }); %>
        </ul>
    </div>
</div>

<div class="row">
    <div class="col-xs-12 col-md-7">
            <br><br><br>
            
        <p>
            <%= p.desc %>
        </p>
        <p>
           $ <%= parseFloat(p.price).toFixed(2) %>
        </p>

        <% if (loggedIn) { %>
            <p><a class="btn btn-lg btn-secondary" href="/cart/add/<%= p.slug %>">Add to cart</a></p>
        <% } else { %>
            <p>You must be logged in to purchase items.</p>
        <% } %>
    </div>
</div>

<% include _layouts/footer %>